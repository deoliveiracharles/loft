<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp"
        android:paddingTop="15dp"
        android:background="@color/loftDark"
        android:textColor="@color/loftLight"
        android:textSize="25dp"
        android:textAlignment="center"
        android:text="@string/menu"/>
    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tabs"
        app:tabTextColor="@color/loftLight"
        app:tabIndicatorColor="@color/loftTabChosen"
        app:tabBackground="@color/loftDark"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/loftDarkBlue"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

</LinearLayout>