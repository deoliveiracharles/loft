<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="br.ufrpe.loftapp2">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label=""
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:name=".MainActivity"
                android:label="@string/app_name"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name=".menu.DetailActivity"
                android:theme="@style/AppTheme.detailStyle">
        </activity>
        <activity
                android:name=".card.DeleteActivity"
                android:theme="@style/AppTheme.delStyle">
        </activity>
        <activity android:name=".credentials.Login"
                  android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".credentials.CreateAccount"
                  android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>